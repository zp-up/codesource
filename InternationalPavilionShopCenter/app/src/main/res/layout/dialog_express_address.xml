<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/alert_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- telephone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="27dp"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="1"
                    android:scrollbars="vertical"
                    android:text="电         话:"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/phone_content"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="27dp"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="1"
                    android:scrollbars="vertical"
                    android:text="800-8200-8800"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="23dp"
                android:background="@color/gainsboro"></View>
            <!-- address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="27dp"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="1"
                    android:text="收货地址:"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/address_content"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="27dp"
                    android:background="@color/white"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:maxEms="20"
                    android:scrollbars="vertical"
                    android:text="四川省成都市高新区天辉街理想中心"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="23dp"
                android:background="@color/gainsboro"></View>
            <!-- express id -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/express_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="27dp"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="1"

                    android:text="快递单号:"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/express_content"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="27dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:hint="请输入运单号"
                    android:imeOptions="actionDone"
                    android:maxLines="2"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColor"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="23dp"
                android:background="@color/gainsboro"></View>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm_button"
            style="@style/dialog_blue_button"
            android:text="提交" />

        <Button
            android:id="@+id/cancel_button"
            style="@style/dialog_blue_button"
            android:layout_marginRight="10dp"
            android:layout_marginStart="60dp"
            android:text="取消"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>